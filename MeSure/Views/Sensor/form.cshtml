@model SensorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        body {
            background-color: #F5F5DC; /* Cor de fundo clara */
            margin: 0;
            font-family: Arial, sans-serif;
        }
    </style>
</head>

<h2>Cadastro de Sensor</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <input type="hidden" name="Id" value="@Model.Id" id="sensorId" />

            <label for="Id" class="control-label">Nome do sensor</label>
            @if (ViewBag.Operacao == "I")
            {
                <input asp-for="NomeSensor" class="form-control" />
                <span asp-validation-for="NomeSensor" class="text-danger"></span>

            }
            else
            {
                <input asp-for="NomeSensor" class="form-control" readonly />
                <br />
                <div class="mb-3">
                    <label for="NomeEstufa" class="form-label">Nome da estufa:</label>
                    <input asp-for="NomeEstufa" class="form-control" id="NomeEstufa" readonly />
                    <span asp-validation-for="NomeEstufa" class="text-danger"></span>
                </div>
            }



            <div class="mb-3">
                <label for="TempoMax" class="form-label">Limite máximo:</label>
                <input asp-for="TempMax" class="form-control" id="TempMax" />
                <span asp-validation-for="TempMax" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="TempMin" class="form-label">Limite mínimo:</label>
                <input asp-for="TempMin" class="form-control" id="TempMin" />
                <span asp-validation-for="TempMin" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="UnidadeMedida" class="form-label">Unidade de medida:</label>
                <input asp-for="UnidadeMedida" class="form-control" id="TempMin" />
                <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="rua" class="form-label">Estufa associada:</label>
                <select asp-for="@Model.IdEstufa" asp-items="ViewBag.Estufas" class="form-control"> </select>
            </div>

            <br />
            <input type="button" id="btnFiltro" class="btn btn-primary" value="Cadastrar no Fiware" onclick="cadastrarFiware()" />
            <input type="submit" class="btn btn-success" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>

        </form>
    </div>
</div>
