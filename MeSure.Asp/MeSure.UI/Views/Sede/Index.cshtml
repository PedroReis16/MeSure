@model List<SedeViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Listagem de Ferramentas</h2>
<a href="/Sede/create" class="btn btn-primary">Novo Registro</a>
<br />
<br />
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Ações</th>
                <th>Código</th>
                <th>Descrição</th>
                <th>Id Fabricante</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ferramenta in Model)
            {
                <tr>
                    <td>
                        <a href="/ferramenta/Edit?id=@ferramenta.Id" class="btn btn-info">Editar</a>
                        <a href="javascript:apagarFerramenta(@ferramenta.Id)" class="btn btn-danger">Apagar</a>
                    </td>
                    <td>@ferramenta.Id</td>
                    <td>@ferramenta.Descricao</td>
                    <td>@ferramenta.FabricanteId</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function apagarFerramenta(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'ferramenta/Delete?id=' + id;
    }
</script>


